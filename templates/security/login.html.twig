{% extends 'base.html.twig' %}

{% block title %}CholloTech - Inicio Sesión
{% endblock %}
{% block body %}
	<link rel="stylesheet" href="{{ asset('build/styles/form.css') }}">
	<div class="login-form">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}
			<h2 class="text-center">Log in</h2>
			<div class="form-group">
				<input type="email" value="{{ last_username }}" placeholder="Tu correo *" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			</div>
			<div class="form-group">
				<input type="password" placeholder="Tu contraseña *" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			</div>
			<div class="clearfix">
				<label class="float-left form-check-label"><input type="checkbox" name="_remember_me">
					Recuerdame</label>
			</div>

			{#
						        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						        See https://symfony.com/doc/current/security/remember_me.html
						
						        <div class="checkbox mb-3">
						            <label>
						                <input type="checkbox" name="_remember_me"> Remember me
						            </label>
						        </div>
						    #}

		</form>
	</div>
{% endblock %}
