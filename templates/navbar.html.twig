<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('inicio') }}">
					<h2 class="text-warning">CholloTech</h2>
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mob-navbar" aria-label="Toggle">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="mob-navbar">
					<ul class="navbar-nav mb-2 mb-lg-0 ml-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('inicio') }}">Inicio</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('producto_new') }}">Añadir chollo</a>
							</li>
							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('categoria_new') }}">Añadir categoria</a>
								</li>
							{% endif %}
						{% endif %}
					</ul>
					<form class="d-flex justify-content-end" role="search" method="post" action="{{ path('producto_busqueda') }}">
						<input class="form-control me-2" type="search" placeholder="Buscar producto" aria-label="Buscar" name="search">
						<button class="btn btn-outline-warning" type="submit">Buscar</button>
					</form>
					<ul class="navbar-nav mb-2 mb-lg-0 ms-auto mr-5">
						{% if app.user %}
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ app.user.nickname }}</a>
								<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
									<li>
										<a class="dropdown-item" href="{{ path('app_logout') }}">Cerrar sesion</a>
									</li>
								</ul>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Iniciar Sesion</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_register') }}">Registrarse</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
	</body>
</html>
